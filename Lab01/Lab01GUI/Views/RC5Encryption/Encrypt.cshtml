@{
	ViewData["Title"] = "Upload File";
}

<link rel="stylesheet" href="~/css/MD5/MD5.css" asp-append-version="true" />

<h2 style="text-align: center;">RC5 CBC-Pad Encryption</h2>
<a asp-action="Decrypt" style="text-align: center;">Decrypt</a>

<div class="md5-wrapper">
	<form asp-action="Upload" method="post" enctype="multipart/form-data" style="max-width: fit-content; height: 300px;">
		<div class="form-group">
			<label for="file">Select file:</label>
			<input type="file" id="file" name="file" />
		</div>
		<div class="form-group">
			<label for="password">Password:</label>
			<input type="text" id="password" name="password" />
		</div>
		<button type="submit" class="btn btn-primary">Upload and Encrypt</button>
	</form>
</div>
