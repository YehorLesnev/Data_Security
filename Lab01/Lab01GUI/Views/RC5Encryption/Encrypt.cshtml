@{
	ViewData["Title"] = "Upload File";
}

<link rel="stylesheet" href="~/css/MD5/MD5.css" asp-append-version="true" />

<h2 style="text-align: center;">RC5 CBC-Pad Encryption</h2>
<a asp-action="Decrypt" style="text-align: center;">Decrypt</a>

<div class="md5-wrapper">
	<form asp-action="Upload" method="post" enctype="multipart/form-data" style="max-width: fit-content; height: 300px;">
		<div class="form-group">
			<label for="file">Select file:</label>
			<input type="file" id="file" name="file" required/>
		</div>
		<div class="form-group">
			<label for="password">Password:</label>
			<input type="text" id="password" name="password" required/>
		</div>
		<button type="submit" class="btn btn-primary">Upload and Encrypt</button>
	</form>

	@if (@ViewBag.ExecutionTime is not null)
	{
		<br />
		<a asp-action="DownloadEncryptedFile" class="btn btn-primary">Download</a>
		<br />
		<br />
		<div>
			<div>
				<h5>Execution Time:</h5>
				<p>@ViewBag.ExecutionTime ms</p>
			</div>
			<div>
				<h5>Input Lenght:</h5>
				<p>@ViewBag.InputLength</p>
			</div>
		</div>
	}
</div>